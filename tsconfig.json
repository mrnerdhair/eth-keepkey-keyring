{
  "compilerOptions": {
    "composite": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "incremental": true,
    "isolatedModules": true,
    "module": "ES2015",
    "moduleResolution": "node",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "rootDir": "./src",
    "sourceMap": true,
    "strict": true,
    "target": "ES2018"
  },
  "include": ["**/src/*"],
  "exclude": ["node_modules", "**/*.test.*"]
}
